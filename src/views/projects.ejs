<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/projectsStyles.css">
    <%-include('./partials/head.ejs')%>
    <title>Projects</title>
</head>
<body>
    <%-include('./partials/header.ejs')%>
    <h1 class="main-title">My current projects</h1>
    <main>
        <%for(let project of projects){%>
        <div class="project-container">
            <h3 class="project-title"><%=project.title%></h3>
            <div class="img-container">
                <img src="/images/<%=project.image%>" alt="LaBuleka logo">
            </div>
            <div class="description-container">
                <p class="description"><%=project.shortDescription%>
                </p>
            </div>
            <div class="buttons-container">
                <%if(project.link === null || project.link === ""){%>
                <a href="" target="_blank" class="project-button noLive" disabled>Live</a>
                <%} else {%>
                <a href="<%=project.link%>" target="_blank" class="project-button">Live</a>
                <%}%>
                <a href="/projects/<%=project.id%>" class="project-button">More info</a>

            </div>
        </div>
        <%}%>
    </main>
    

    <%-include('./partials/footer.ejs')%>
    <script src="js/noLive.js"></script>
    
</body>
</html>