<!DOCTYPE html>
<html lang="es">
<head>
    <%-include('../partials/head')%>
    <link rel="stylesheet" href="/css/mainStyles.css">
    <link rel="stylesheet" href="/css/projectDetail.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Proyecto | <%=project.title%></title>
</head>
<body>
    <%-include('../partials/headerEs')%>

    <main>
        <h1 class="main-title"><%=project.title%></h1>
        <section class="project">            
            <div class="project-img">
                <img src="/images/<%=project.image%>" alt="<%=project.title%>">
            </div>
            <div class="languages-used">
                <%for(let language of project.languages){%>                    
                    <i class="<%=language.icon%>"></i>                    
                <%}%>
            </div>
            <div class="description-container">
                <p class="description"></p>
                <h3 class="project-subtitle">Resumen</h3>
                <%=project.description.summary%>
                <h3 class="project-subtitle">Objectivos</h3>
                <%=project.description.objectives%>
                <h3 class="project-subtitle">Tecnologias usadas</h3>
                <%for(let technology of project.description.technologies){%>
                    <ul>
                        <li><strong><%=technology.name%></strong>: <%=technology.text%></li>
                    </ul>
                <%}%>
                <h3 class="project-subtitle">Principales implementaciones</h3>
                <%for(let feature of project.description.keyFeatures){%>
                    <ul>
                        <li><strong><%=feature.name%></strong>: <%=feature.text%></li>
                    </ul>
                <%}%>
                <h3 class="project-subtitle">Rol y contribuciones</h3>
                <%=project.description.role%>
                <h3 class="project-subtitle">Impacto</h3>
                <%=project.description.impact%>
                
            </div>
            <div class="buttons-container">
                <%if(project.link === null || project.link === ""){%>
                    <a href="" target="_blank" class="project-button noLive" disabled>Live</a>
                    <%} else {%>
                    <a href="<%=project.link%>" target="_blank" class="project-button">Live</a>
                    <%}%>
                <a href="<%=project.github%>" target="_blank" class="project-button"><i class="fa-brands fa-github"></i> Github </a>
            </div>
            
        </section>
        

        <section class="other-projects">


        </section>
    </main>

    <%-include('../partials/footerEs')%>

    <script src="/js/noLive.js"></script>
    
</body>
</html>